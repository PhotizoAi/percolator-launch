# API Configuration
API_PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://...
SUPABASE_URL=https://...
SUPABASE_ANON_KEY=...

# CORS Configuration
# Comma-separated list of allowed origins
# REQUIRED in production, defaults to localhost in development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://percolator-launch.vercel.app

# WebSocket Authentication
# Enable authentication requirement for WebSocket connections
WS_AUTH_REQUIRED=false

# WebSocket authentication secret (change in production!)
WS_AUTH_SECRET=percolator-ws-secret-change-in-production

# WebSocket Limits
MAX_WS_CONNECTIONS=500

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com


# ── Sentry Error Tracking ──
# DSN for API server error reporting
SENTRY_DSN=
# Release version (defaults to api@0.1.0)
API_VERSION=
